@model IEnumerable<database.Models.Product>
@using database.Controllers
@using database.Models

@{
    ViewBag.Title = "Add_toCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Shopping Cart</h2>


<table class="table">
    <tr>
        <th>Product Name</th>
        <th>Price</th>
        <th>Product ID</th>
        <th>Added At</th>

    </tr>

    @if (Session["session_add"] != null)
    {
        foreach (Item item in (List<Item>)Session["session_add"])
        {
            <tr>
                <th>@item.product.name</th>
                <th>@item.product.price</th>
                <th>@item.product.Id</th>
                <th>@item.product.Cart.added_at</th>
                <th>
                    @using (Html.BeginForm("Remove_FromCar", "Products",new {id=item.product.Id }, FormMethod.Post))
                    {
                        <a href="@Url.Action("Remove_FromCar","Products")">
                            <input type="submit" value="Remove" class="btn btn-danger"  style="width:100%" />
                        </a>
                    }
                </th>

            </tr>

        }
    }

</table>
